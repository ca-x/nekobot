{
  "agents": {
    "defaults": {
      "workspace": "~/.nekobot/workspace",
      "restrict_to_workspace": true,
      "provider": "claude",
      "model": "claude-sonnet-4-5-20250929",
      "max_tokens": 8192,
      "temperature": 0.7,
      "max_tool_iterations": 20
    }
  },
  "providers": {
    "anthropic": {
      "api_key": "your-anthropic-api-key"
    },
    "openai": {
      "api_key": "your-openai-api-key"
    }
  },
  "tools": {
    "web": {
      "search": {
        "api_key": "your-brave-search-api-key",
        "max_results": 5
      },
      "fetch": {
        "max_chars": 50000
      }
    }
  },
  "channels": {
    "telegram": {
      "enabled": false,
      "token": "your-telegram-bot-token",
      "proxy": "",
      "allow_from": []
    },
    "discord": {
      "enabled": false,
      "token": "your-discord-bot-token",
      "allow_from": []
    }
  },
  "gateway": {
    "host": "0.0.0.0",
    "port": 18790,
    "message_queue_size": 100
  },
  "heartbeat": {
    "enabled": false,
    "interval_minutes": 60
  },
  "state": {
    "backend": "file"
  },
  "bus": {
    "type": "local"
  }
}
